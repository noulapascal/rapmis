{% extends 'base.html.twig' %}

{% block body %}
           <div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
    <h1>{% trans %}Users list{% endtrans %}</h1>
<div class="table-scrollable">
    <table class="table table-striped table-bordered table-hover table-checkable order-column valign-middle" id="example3">
        <thead>
            <tr>
                <th>{% trans %} Id{% endtrans %}</th>
                <th>{% trans %}username{% endtrans %}</th>
                <th>{% trans %}Phonenumber{% endtrans %}</th>
                <th>{% trans %}Zone{% endtrans %}</th>
                <th>{% trans %}Filename{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>{{ user.phoneNumber }}</td>
                <td>{{ user.zone }}</td>
                <td>{{ user.filename }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new user</a>
        </li>
    </ul>
    </div>
    </div>
    </div>
    </div>
    </div>
{% endblock %}
