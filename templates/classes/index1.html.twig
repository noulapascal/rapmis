{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class=" pull-left">
                        <div class="page-title">{% trans %} Dashboard {% endtrans %}</div>
                    </div>
                    <ol class="breadcrumb page-breadcrumb pull-right">
                        <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="{{ path('homepage') }}">{% trans %} Home {% endtrans %}</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li class="active">{% trans %} Dashboard {% endtrans %}</li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-topline-red">
                        <div class="card-head">
                            <header>{% trans %}Class{% endtrans %} LIST</header>
                            <div class="tools">
                                <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                                <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                                <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                            </div>
                        </div>
                        <div class="card-body ">
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-6">

                                    <div class="btn-group">
                                        <!-- Button trigger modal -->
                                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_ADMIN_SEC') %}
                                        <a href="{{ path('classes_newid', {'dev': app.user.etablissements.name}) }}">  <button type="button" id="addRow1" class="btn btn-info" >
                                                  {% trans %}Add{% endtrans %}  {% trans %}New{% endtrans %} {% trans %}Class{% endtrans %}<i class="fa fa-plus"></i>
                                            </button></a>
                                                {% endif %}
                                    </div>

                                </div>
                                <div class="col-md-6 col-sm-6 col-6">
                                    <div class="btn-group pull-right">
                                        <button class="btn deepPink-bgcolor  btn-outline dropdown-toggle" data-toggle="dropdown">Tools
                                            <i class="fa fa-angle-down"></i>
                                        </button>
                                        <ul class="dropdown-menu pull-right">
                                            <li>
                                                <a href="javascript:;">
                                                    <i class="fa fa-print"></i> {% trans %}Print {% endtrans %} </a>
                                            </li>
                                            <li>
                                                <a href="javascript:;">
                                                    <i class="fa fa-file-pdf-o"></i> {% trans %}Save as PDF {% endtrans %}</a>
                                            </li>
                                            <li>
                                                <a href="javascript:;">
                                                    <i class="fa fa-file-excel-o"></i> {% trans %}Export TO Excel {% endtrans %} </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="table-scrollable">
                                <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="example4">
                                    <thead>
                                    <tr>
                                        <th>{% trans %}
                                            <label class="rt-chkbox rt-chkbox-single rt-chkbox-outline">
                                                <input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes" />
                                                <span></span>
                                            </label>
                                        {% endtrans %}</th>
                                        <th>{% trans %}Level{% endtrans %}
                                        <th>{% trans %}Number{% endtrans %}
                                        <th>{% trans %}School{% endtrans %}</th>
                                        <th>{% trans %}Actions{% endtrans %}
                                    </tr>
                                    </thead>
                                    <tbody>



                                    {% for class in classes %}


                                        <tr class="odd gradeX">
                                            <td>
                                                <label class="rt-chkbox rt-chkbox-single rt-chkbox-outline">
                                                    <input type="checkbox" class="checkboxes" value="1" />
                                                    <span></span>
                                                </label>
                                            </td>
                                            <td>{{ class.niveau.name }}</td>
                                            <td>{{ class.name }}</td>
                                            <td>{{ class.etablissements.name }}</td>
                                            <td class="valigntop">
                                                <div class="btn-group">
                                                    <button class="btn btn-xs deepPink-bgcolor dropdown-toggle no-margin" type="button" data-toggle="dropdown" aria-expanded="false"> {% trans %}Actions{% endtrans %}
                                                        <i class="fa fa-angle-down"></i>
                                                    </button>
                                                    <ul class="dropdown-menu" role="menu">
                                                        <li>
                                                            <a href="{{ path('students_index_class', {'flo': class.id, 'dev': class.niveau.id }) }}">

                                                                <i class="icon-docs"></i> {% trans %} Student List {% endtrans %} </a>
                                                        </li>
                                                        <li>
                                                            
                                                            <a href="{{ path('classes_edit', { 'id': class.id }) }}">
                                                                <i class="icon-tag"></i> {% trans %} Edit  {% endtrans %} Class </a>
                                                        </li>
                                                           <li>
                                                            <a href="{{ path('empty_class', { 'id': class.id }) }}">
                                                                <i class="icon-tag"></i> {% trans %} Empty the classroom{% endtrans %} Class </a>
                                                        </li>
                                                       <!-- <li>
                                                            <a href="javascript:;">
                                                                <i class="icon-user"></i> {% trans %}New{% endtrans %} User </a>
                                                        </li>
                                                        <li class="divider"> </li>
                                                        <li>
                                                            <a href="javascript:;">
                                                                <i class="icon-flag"></i> Comments
                                                                <span class="badge badge-success">4</span>
                                                            </a>
                                                        </li-->
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>
{% endblock %}
