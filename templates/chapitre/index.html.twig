<!DOCTYPE html>

<title>Chapitre index</title>

{% block body %}
    <h1>{% trans %}Chapitre index{% endtrans %}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Objectifs{% endtrans %}</th>
                <th>{% trans %}actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for chapitre in chapitres %}
            <tr>
                <td>{{ chapitre.id }}</td>
                <td>{{ chapitre.name }}</td>
                <td>{{ chapitre.objectifs }}</td>
                <td>
                    <a href="{{ path('chapitre_show', {'id': chapitre.id}) }}">show</a>
                    <a href="{{ path('chapitre_edit', {'id': chapitre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('chapitre_new') }}">Create new</a>
{% endblock %}
