{% extends 'base.html.twig' %}

{% block body %}
<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">{% trans %} Dashboard {% endtrans %}</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="{{ path('homepage') }}">{% trans %} Home {% endtrans %}</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">{% trans %} Dashboard {% endtrans %}</li>
                </ol>
            </div>
        </div>
    <h1>{% trans %}Notes list{% endtrans %}</h1>

    <table>
        <thead>
            <tr>
                <th>{% trans %} Id{% endtrans %}</th>
                <th>{% trans %}Nomevaluation{% endtrans %}</th>
                <th>{% trans %}Matière{% endtrans %}</th>
                <th>{% trans %}Valeur{% endtrans %}</th>
                <th>{% trans %}Coeff{% endtrans %}</th>
                <th>{% trans %}élève{% endtrans %}</th>
                <th>{% trans %}classe{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td><a href="{{ path('notes_show', { 'id': note.id }) }}">{{ note.id }}</a></td>
                <td>{{ note. }}</td>
                <td>{{ note.matieres }}</td>
                <td>{{ note.valeur }}</td>
                <td>{{ note.coeff }}</td>
                <td>{{ note.students.name }}</td>
                <td>{{ note.students.classes.niveau.name }}{{ note.students.classes.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('notes_show', { 'id': note.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('notes_edit', { 'id': note.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('notes_new') }}">Create a new note</a>
        </li>
    </ul>
    </div>
</div>
{% endblock %}
