{% extends 'base.html.twig' %}
 {% block meta %}
    <meta name="description" content="villes" />
    <meta name="author" content="MOUAFO NOULA Pascal" />
    {% endblock %}
{% block body %}
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class=" pull-left">
                        <div class="page-title">{% trans %} Dashboard {% endtrans %}</div>
                    </div>
                    <ol class="breadcrumb page-breadcrumb pull-right">
                        <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="{{ path('homepage') }}">{% trans %} Home {% endtrans %}</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li class="active">{% trans %} Dashboard {% endtrans %}</li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-topline-red">
                        <div class="card-head">
                            <header>{% trans %}City List{% endtrans %}</header>
                            <div class="tools">
                                <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                                <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                                <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                            </div>
                        </div>
                        <div class="card-body ">
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-6">

                                    <div class="btn-group">
                                        <!-- Button trigger modal -->
                                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                                        <a href="{{ path('city_new') }}">  <button type="button" id="addRow1" class="btn btn-info" >
                                                  {% trans %}Add{% endtrans %}  {% trans %}New{% endtrans %} City<i class="fa fa-plus"></i>
                                            </button></a>
                                                {% endif %}
                                    </div>

                                </div>
                                <div class="col-md-6 col-sm-6 col-6">
                                    <div class="btn-group pull-right">
                                        <button class="btn deepPink-bgcolor  btn-outline dropdown-toggle" data-toggle="dropdown">Tools
                                            <i class="fa fa-angle-down"></i>
                                        </button>
                                        <ul class="dropdown-menu pull-right">
                                            <li>
                                                <a href="javascript:;">
                                                    <i class="fa fa-print"></i> {% trans %}Print {% endtrans %} </a>
                                            </li>
                                            <li>
                                                <a href="javascript:;">
                                                    <i class="fa fa-file-pdf-o"></i> {% trans %}Save as PDF {% endtrans %}</a>
                                            </li>
                                            <li>
                                                <a href="javascript:;">
                                                    <i class="fa fa-file-excel-o"></i> {% trans %}Export TO Excel {% endtrans %} </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="table-scrollable">
                                <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="example4">
                                    <thead>
                                    <tr>
                                        <th>{% trans %}
                                            <label class="rt-chkbox rt-chkbox-single rt-chkbox-outline">
                                                <input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes" />
                                                <span></span>
                                            </label>
                                        {% endtrans %}</th>
                                        <th>{% trans %} Name {% endtrans %}
                                        <th>{% trans %}Longitude{% endtrans %}</th>
                                        <th>{% trans %}latitude{% endtrans %}</th>
                                        <th>{% trans %}Actions{% endtrans %}
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for city in cities  %}


                                        <tr class="odd gradeX">
                                            <td>
                                                <label class="rt-chkbox rt-chkbox-single rt-chkbox-outline">
                                                    <input type="checkbox" class="checkboxes" value="1" />
                                                    <span></span>
                                                </label>
                                            </td>
                                            <td>{{ city.name }}</td>
                                            <td>{{ city.longitude}}</td>
                                            <td>{{ city.latitude }}</td>
                                            <td class="valigntop">
                                                <div class="btn-group">
                                                    <button class="btn btn-xs deepPink-bgcolor dropdown-toggle no-margin" type="button" data-toggle="dropdown" aria-expanded="false"> {% trans %}Actions{% endtrans %}
                                                        <i class="fa fa-angle-down"></i>
                                                    </button>
                                                    <ul class="dropdown-menu" role="menu">
                                                        <li>
                                                            <a href="{{ path('city_subdivision', {'flo': city.id }) }}">

                                                                <i class="icon-docs"></i> Subdivision</a>
                                                        </li>
                                                        <li>
                                                            <a href="{{ path('city_school', {'flo': city.id }) }}">

                                                                <i class="icon-docs"></i> {% trans %} SCHOOL LIST  {% endtrans %} </a>
                                                        </li>
                                                                                                {% if is_granted('ROLE_SUPER_ADMIN') %}

                                                        <li>
                                                            <a href="{{ path('city_edit', { 'id': city.id }) }}">
                                                                <i class="icon-user"></i> {% trans %} Edit  {% endtrans %} City</a>
                                                        </li>
                                                        <li>
                                                            <a href="{{ path('city_new') }}">
                                                                <i class="icon-tag"></i> {% trans %}New{% endtrans %} City</a>
                                                        </li>

                                                        <li class="divider"> </li>
                                                        <li>
                                                            {% endif %}
                                                            <a href="javascript:;">
                                                                <i class="icon-flag"></i> Comments
                                                                <span class="badge badge-success">4</span>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>
{% endblock %}
