{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class=" pull-left">
                        <div class="page-title">{% trans %} Dashboard {% endtrans %}</div>
                    </div>
                    <ol class="breadcrumb page-breadcrumb pull-right">
                        <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="{{ path('homepage') }}">{% trans %} Home {% endtrans %}</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li class="active">{% trans %} Dashboard {% endtrans %}</li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-topline-red">
                        <div class="card-head">
                            <header>HEAD OF DEPARTMENT LIST</header>
                            <div class="tools">
                                <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                                <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                                <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                            </div>
                        </div>
                        <div class="card-body ">
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-6">

                                    <div class="btn-group">
                                        <!-- Button trigger modal -->
                                        <a href="{{ path('chef_department_new') }}">  <button type="button" id="addRow1" class="btn btn-info" >
                                                  {% trans %}Add{% endtrans %}  {% trans %}New{% endtrans %}{% trans %} HEAD OF DEPARTMENT{%  endtrans %}<i class="fa fa-plus"></i>
                                            </button></a>
                                    </div>

                                </div>
                                <div class="col-md-6 col-sm-6 col-6">
                                    <div class="btn-group pull-right">
                                        <button class="btn deepPink-bgcolor  btn-outline dropdown-toggle" data-toggle="dropdown">Tools
                                            <i class="fa fa-angle-down"></i>
                                        </button>
                                        <ul class="dropdown-menu pull-right">
                                            <li>
                                                <a href="javascript:;">
                                                    <i class="fa fa-print"></i> {% trans %}Print {% endtrans %} </a>
                                            </li>
                                            <li>
                                                <a href="javascript:;">
                                                    <i class="fa fa-file-pdf-o"></i> {% trans %}Save as PDF {% endtrans %}</a>
                                            </li>
                                            <li>
                                                <a href="javascript:;">
                                                    <i class="fa fa-file-excel-o"></i> {% trans %}Export TO Excel {% endtrans %} </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="table-scrollable">
                                <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="example4">
                                    <thead>
                                    <tr>
                                        <th>{% trans %}
                                            <label class="rt-chkbox rt-chkbox-single rt-chkbox-outline">
                                                <input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes" />
                                                <span></span>
                                            </label>
                                        {% endtrans %}</th>
                                        <th>{% trans %} Teacher{% endtrans %}</th>
                                        <th>{% trans %} Subject{% endtrans %}</th>
                                        <th>{% trans %}Description{% endtrans %}
                                        {% if(is_granted('ROLE_ADMIN')) %}
                                            <th>{% trans %}Actions{% endtrans %}
                                        {% endif %}
                                    </tr>
                                    </thead>
                                    <tbody>



                                    {% for chef_department in chef_departments %}


                                        <tr class="odd gradeX">
                                            <td class="left">
                                                <label class="rt-chkbox rt-chkbox-single rt-chkbox-outline">
                                                    <input type="checkbox" class="checkboxes" value="1" />
                                                    <span></span>
                                                </label>
                                            </td>
                                            <td class="left">{{ chef_department.teacher.name }}</td>
                                            <td class="left">"{% trans %} Department{% endtrans %}"{{ chef_department.matiere.name }} </td>
                                            <td class="left">{% if chef_department.description %}{{ chef_department.description }}{% endif %}</td>
                                            {% if(is_granted('ROLE_ADMIN')) %}
                                                <td>
                                                    <a href="{{ path('chef_department_edit', { 'id': chef_department.id }) }}" class="btn btn-primary btn-xs">
                                                        <i class="fa fa-pencil"></i>
                                                    </a>
                                                    <a href="{{ path('chef_department_delete', { 'id': chef_department.id }) }}" class="btn btn-danger btn-xs" onclick="return confirm('{{'Delete'|trans}}')">
                                                        <i class="fa fa-trash-o"></i>
                                                    </a>
                                                </td>
                                            {% endif %}
                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>
{% endblock %}
