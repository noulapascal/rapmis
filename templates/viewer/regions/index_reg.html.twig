{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class=" pull-left">
                        <div class="page-title">{% trans %} Dashboard {% endtrans %}</div>
                    </div>
                    <ol class="breadcrumb page-breadcrumb pull-right">
                        <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="{{ path('homepage') }}">{% trans %} Home {% endtrans %}</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li class="active">{% trans %} Dashboard {% endtrans %}</li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-topline-red">
                        <div class="card-head">
                            <header>Regions LIST</header>
                            <div class="tools">
                                <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                                <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                                <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                            </div>
                        </div>
                        <div class="card-body ">

                            <div class="table-scrollable">
                                <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="example4">
                                    <thead>
                                    <tr>
                                        <th>{% trans %}
                                            <label class="rt-chkbox rt-chkbox-single rt-chkbox-outline">
                                                <input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes" />
                                                <span></span>
                                            </label>
                                        {% endtrans %}</th>
                                        <th>{% trans %} Name {% endtrans %}
                                        <th>{% trans %} Choisir un departement {% endtrans %}</th>
                                      
                                    </tr>
                                    </thead>
                                    <tbody>

                                    {% for region_s in regions %}
                                    {% for region in region_s %}

                                        <tr class="odd gradeX">
                                            <td>
                                                <label class="rt-chkbox rt-chkbox-single rt-chkbox-outline">
                                                    <input type="checkbox" class="checkboxes" value="1" />
                                                    <span></span>
                                                </label>
                                            </td>
                                            <td><a href="{{ path('regions_department', {'flo': region.id }) }}">{{ region.name }}</a></td>
                                            <td class="valigntop">
                                                <div class="btn-group">
                                                    <button class="btn btn-xs bg-light dropdown-toggle no-margin" type="button" data-toggle="dropdown" aria-expanded="false">Selectionner un departement
                                                        <i class="fa fa-angle-down"></i>
                                                    </button>
                                                    <ul class="dropdown-menu" role="menu">
                                                                                                                <li>
                                                            <a href="{{ path('etablissements_reg_index', {'id': region.id }) }}">

                                                                <i class="icon-docs"></i> {{ region.name }}</a>
                                                        </li>
                                                        {% for department in region.departments %}

                                                        <li>
                                                            <a href="{{ path('department_city', {'flo': department.id }) }}">

                                                                <i class="icon-docs"></i> {{ department.name }}</a>
                                                        </li>
                                                        {% endfor %}
                                                        <li class="divider"> </li>
                                                        <li>
                                                            <a href="javascript:;">
                                                                <i class="icon-flag"></i> Comments
                                                                <span class="badge badge-success">4</span>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                            
                                         
                                        </tr>
                                    {% endfor %}
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>
{% endblock %}
