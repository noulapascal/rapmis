{% extends 'base.html.twig' %}

{% block body %}
<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">{% trans %} Dashboard {% endtrans %}</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="{{ path('homepage') }}">{% trans %} Home {% endtrans %}</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">{% trans %} Dashboard {% endtrans %}</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card card-topline-red">
                    <div class="card-head">
                        <header>{% trans %} SCHOOL LIST  {% endtrans %}</header>
                        <div class="tools">
                            <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                            <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                            <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                        </div>
                    </div>
                    <div class="card-body ">
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-6">








                                <div class="btn-group">
                                    <!-- Button trigger modal -->
                                    <button type="button" id="addRow1" class="btn btn-info" data-toggle="modal" data-target="#exampleModalCenter">
                                          {% trans %}Add{% endtrans %}  {% trans %}New{% endtrans %} School<i class="fa fa-plus"></i>
                                    </button>
                                </div>

                                <!-- Modal -->
                                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">{% trans %}What kind of school do you want to create{% endtrans %}?</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">


                                                <div class="col-sm-12">
                                                    <div class="card  card-box">
                                                        <div class="card-head">
                                                            <header>{% trans %} Please make your choice  {% endtrans %}:</header>
                                                        </div>
                                                        <div class="card-body ">
                                                            <a href="" ><button type="button" class="btn btn-default btn-circle dropdown-toggle m-r-20">{% trans %} Nursery School {% endtrans %}</button></a>
                                                            <a href="" ><button type="button" class="btn btn-info btn-circle dropdown-toggle m-r-20 ">{% trans %} Primary School{% endtrans %}</button></a><br><br><br>
                                                            <a href="{{ path('etablissements_news', {'who': 'Secondaire'}) }}" ><button type="button" class="btn btn-success btn-circle dropdown-toggle m-r-20">{% trans %} High School{% endtrans %}</button></a>
                                                            <a href="" ><button type="button" class="btn btn-primary btn-circle dropdown-toggle m-r-20">{% trans %} University or Higher Institute{% endtrans %}</button></a>



                                                        </div>
                                                    </div>
                                                </div>


                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>




                            </div>
                            <div class="col-md-6 col-sm-6 col-6">
                                <div class="btn-group pull-right">
                                    <button class="btn deepPink-bgcolor  btn-outline dropdown-toggle" data-toggle="dropdown">Tools
                                        <i class="fa fa-angle-down"></i>
                                    </button>
                                   
                                </div>
                            </div>
                        </div>
                        <div class="table-scrollable">
                            <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="example4">
                                <thead>
                                <tr>
                                    <th>{% trans %}
                                        <label class="rt-chkbox rt-chkbox-single rt-chkbox-outline">
                                            <input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes" />
                                            <span></span>
                                        </label>
                                    {% endtrans %}</th>
                                    <th></th>
                                    <th>{% trans %} Username {% endtrans %}</th>
                                    <th>{% trans %}Sigle{% endtrans %}
                                    <th>{% trans %}Joined{% endtrans %}
                                    <th>{% trans %}School Type{% endtrans %}
                                    <th>{% trans %}Description{% endtrans %}
                                    <th>{% trans %}Actions{% endtrans %}
                                </tr>
                                </thead>
                                <tbody>



                                {% for etablissement in etablissements  %}


                                    <tr class="odd gradeX">
                                        <td>
                                            <label class="rt-chkbox rt-chkbox-single rt-chkbox-outline">
                                                <input type="checkbox" class="checkboxes" value="1" />
                                                <span></span>
                                            </label>
                                        </td>
                                        <td class="patient-img"><img src="{{ asset('uploads/logo/' ~ etablissement.filename) }}" alt=""></td>
                                        <td>{{ etablissement.name }}</td>
                                        <td>{{ etablissement.sigle }}</td>
                                        <td>{% if etablissement.dateCreation %}{{ etablissement.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>{{ etablissement.type_etablissements.name }}</td>
                                        <td>{{ etablissement.description }}</td>
                                        <td class="valigntop">
                                            <div class="btn-group">
                                                <button class="btn btn-xs deepPink-bgcolor dropdown-toggle no-margin" type="button" data-toggle="dropdown" aria-expanded="false"> {% trans %}Actions{% endtrans %}
                                                    <i class="fa fa-angle-down"></i>
                                                </button>
                                                <ul class="dropdown-menu" role="menu">
                                                   
                                                     <li>
                                                        <a href="{{ path('classes_per_year', {'flo': etablissement.id }) }}">
                                                            <i class="icon-docs"></i> {% trans %}Class List{% endtrans %} </a>
                                                    </li>
                                                        {% for year in schoolYear %}
                                                    <li>
                                                        <a href="{{ path('classes_year', {'flo': etablissement.id,'an':year.id }) }}">
                                                            <i class="icon-docs"></i> {{ year }}</a>
                                                    </li>
                                                    {% endfor %}
                                                    
                                                    
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    </div>
</div>
{% endblock %}
