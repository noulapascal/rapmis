{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class=" pull-left">
                        <div class="page-title">{% trans %} Dashboard {% endtrans %}</div>
                    </div>
                    <ol class="breadcrumb page-breadcrumb pull-right">
                        <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="{{ path('homepage') }}">{% trans %} Home {% endtrans %}</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li class="active">{% trans %} Dashboard {% endtrans %}</li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-topline-red">
                        <div class="card-head">
                            <header>Department LIST</header>
                            <div class="tools">
                                <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                                <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                                <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                            </div>
                        </div>
                        <div class="card-body ">
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-6">

                                    <div class="btn-group">
                                        <!-- Button trigger modal -->
                                    </div>

                                </div>
                                <div class="col-md-6 col-sm-6 col-6">
                                    <div class="btn-group pull-right">
                                        <button class="btn deepPink-bgcolor  btn-outline dropdown-toggle" data-toggle="dropdown">Tools
                                            <i class="fa fa-angle-down"></i>
                                        </button>
                                        <ul class="dropdown-menu pull-right">
                                            <li>
                                                <a href="javascript:;">
                                                    <i class="fa fa-print"></i> {% trans %}Print {% endtrans %} </a>
                                            </li>
                                            <li>
                                                <a href="javascript:;">
                                                    <i class="fa fa-file-pdf-o"></i> {% trans %}Save as PDF {% endtrans %}</a>
                                            </li>
                                            <li>
                                                <a href="javascript:;">
                                                    <i class="fa fa-file-excel-o"></i> {% trans %}Export TO Excel {% endtrans %} </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="table-scrollable">
                                <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="example4">
                                    <thead>
                                    <tr>
                                        <th>{% trans %}
                                            <label class="rt-chkbox rt-chkbox-single rt-chkbox-outline">
                                                <input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes" />
                                                <span></span>
                                            </label>
                                        {% endtrans %}</th>
                                        <th>{% trans %} Name {% endtrans %}
                                        <th>{% trans %}City{% endtrans %}</th>
                                        <th>{% trans %}Subdivision{% endtrans %}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for department in departments  %}


                                        <tr class="odd gradeX">
                                            <td>
                                                <label class="rt-chkbox rt-chkbox-single rt-chkbox-outline">
                                                    <input type="checkbox" class="checkboxes" value="1" />
                                                    <span></span>
                                                </label>
                                            </td>
                                            <td><a href="{{ path('department_city', {'flo': department.id }) }}">{{ department.name }}</a></td>
                                            <td>
                                                 <div class="btn-group">
                                                    <button class="btn btn-xs  dropdown-toggle no-margin" type="button" data-toggle="dropdown" aria-expanded="false"> Choose a city
                                                        <i class="fa fa-angle-down"></i>
                                                    </button>
                                                    <ul class="dropdown-menu" role="menu">
                                                                                                        
                                                {% for city in department.city %}
                                                    <li>
                                                            <a href="{{ path('city_school', {'flo': city.id }) }}">

                                                                <i class="icon-docs"></i>{{ city.name }} </a>
                                                    </li>
                                                {% endfor %}
                                                

                                                                                                            </ul>
                                                </div>
                                                

                                            </td>
                                            <td class="valigntop">
                                                <div class="btn-group">
                                                    <button class="btn btn-xs deepPink-bgcolor dropdown-toggle no-margin" type="button" data-toggle="dropdown" aria-expanded="false"> Choose a subdivision
                                                        <i class="fa fa-angle-down"></i>
                                                    </button>
                                                    <ul class="dropdown-menu" role="menu">
                                                         <strong>Subdivision</strong>
                                                        {% for city in department.city %}
                                                           
                                                            {% for subdivision in city.subdivisions %}
                                                        <li>
                                                            <a href="{{ path('etablissements_sub_index', {'id': subdivision.id }) }}">

                                                                <i class="icon-docs"></i>  {{ subdivision.name }} </a>
                                                        </li>
                                                        {% endfor %}
                                                        {% endfor %}
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>
{% endblock %}
